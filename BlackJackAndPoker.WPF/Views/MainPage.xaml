<Page x:Class="BlackJackAndPoker.WPF.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlackJackAndPoker.WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="Yellow">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Card Games Or Something Like That" FontWeight="ExtraBold" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Content="sHOOT mE" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="22" Click="gOTsHOT"/>
        <Button Grid.Row="2" Content="HALP" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="22" Click="Button_Click"/>
        <Button Grid.Row="3" Content="Exit" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="50 20" Click="ExitButtonClicked"/>
    </Grid>
</Page>
