<Page x:Class="BlackJackAndPoker.WPF.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlackJackAndPoker.WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="Yellow">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="YOU HAD SOME WHAT UP" FontWeight="ExtraBold" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Content="pretty girl to want my olives" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="22"/>
        <Button Grid.Row="2" Content="lily... lily i like olives... we'll make it work" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="22"/>
        <Button Grid.Row="3" Content="go ho ho and a bottle of rum" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="22"/>
        <Button Grid.Row="4" Content="Exit" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="50 20" Click="ExitButtonClicked"/>
    </Grid>
</Page>
